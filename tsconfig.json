{
  "compilerOptions": {
      "module": "commonjs",
      "lib": ["es7", "dom"],
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "strictNullChecks": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "src/tests/**/*"
  ]
}